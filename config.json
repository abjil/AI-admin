{
  "remote_servers": [
    {
      "name": "test1",
      "host": "192.168.10.18",
      "port": 8080,
      "protocol": "https",
      "auth_token": "test1token",
      "tags": ["production", "web-server", "critical"],
      "ssl_verify": true,
      "timeout": 30,
      "retry_attempts": 3
    },
    {
      "name": "test2",
      "host": "192.168.10.17",
      "port": 8080,
      "protocol": "https",
      "auth_token": "test2token",
      "tags": ["development", "testing"],
      "ssl_verify": false,
      "timeout": 15
    }
  ],
  "security": {
    "default_timeout": 30,
    "max_concurrent_connections": 10,
    "rate_limit": {
      "requests_per_minute": 60,
      "burst_size": 10
    },
    "audit_log": {
      "enabled": true,
      "file": "/var/log/mcp-admin/audit.log",
      "level": "INFO"
    }
  },
  "server_groups": {
    "production": {
      "tags": ["production"],
      "restrictions": {
        "dangerous_commands": false,
        "file_write": false,
        "service_restart": false
      }
    },
    "development": {
      "tags": ["development", "testing"],
      "restrictions": {
        "dangerous_commands": true,
        "file_write": true,
        "service_restart": true
      }
    }
  }
} 